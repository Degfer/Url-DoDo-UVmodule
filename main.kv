MDFloatLayout:
    MDLabel:
        id: task_label
        halign: 'center'
        markup: True
        text: "[u][size=48][b]SmartТепло[/b][/size][/u]"
        pos_hint: {'y': .45}

    ScrollView:
        pos_hint: {'center_y': .5, 'center_x': .5}
        size_hint: .9, .8

        MDList:
            id: container

    MDFillRoundFlatIconButton:
        icon: 'plus-thick'
        text: "Подключить контроллер"
        md_bg_color: 0, 0.5, 255, 1
        on_release: app.show_task_dialog()
        elevation_normal: 12
        pos_hint: {'x': .45 , 'y': .04}

<DialogContent>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: 1, None
    height: "130dp"

    GridLayout:
        rows: 1

        MDTextField:
            id: task_text
            hint_text: "url-адрес контроллера..."
            hint_text_color_focus: 0, 0.5, 255, 1
            text_color_focus: 0, 0.5, 255, 1
            line_color_focus: 0, 0.5, 255, 1
            pos_hint: {"center_y": .4}
            max_text_length: 50
            on_text_validate: (app.add_task(task_text, date_text.text), app.close_dialog())

    MDLabel:
        spacing: '10dp'
        id: date_text

    BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            text: "Сохранить"
            md_bg_color: 0, 0.5, 255, 1
            on_release: (app.add_task(task_text, date_text.text), app.close_dialog())
        MDFlatButton:
            text: 'Отмена'
            on_release: app.close_dialog()


<ListItemWithCheckbox>:
    id: the_list_item
    markup: True

    on_release: root.touch_item(the_list_item)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1
        on_release:
            root.delete_item(the_list_item)

<MyWebView>
    MDFlatButton:
        text: "Push"
        pos_hint: {"center_x": .5, "center_y": .4}
        on_press: root.Push()

